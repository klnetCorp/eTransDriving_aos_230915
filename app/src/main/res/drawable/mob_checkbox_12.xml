<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:checkableBehavior="single"
>
	<item
		android:state_checked="true" android:state_enabled="true"
		android:drawable="@mipmap/btn_small_check_default"
	/>

	<item
		android:state_checked="false"  android:state_enabled="true"
		android:drawable="@mipmap/btn_small_check_clear_"
	/>
	
	<item
	    android:state_enabled="false" android:state_checked="false"
	    android:drawable="@mipmap/btn_small_check_clear_disabled"
	/>
	
    <item
	    android:state_enabled="false" android:state_checked="true"
	    android:drawable="@mipmap/btn_small_check_disabled"
    />
</selector>